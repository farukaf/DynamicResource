<Window x:Class="DynamicResource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicResource"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Background="{DynamicResource ColorA}">
    <Grid>
        <Button x:Name="btnRandom" 
                Click="btnRandom_Click" 
                Margin="50,50,0,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Cursor="Hand"
                Padding="5">
            Randomize
        </Button>
        <Rectangle Fill="{DynamicResource ColorB}" Margin="100"></Rectangle>
    </Grid>
</Window>
